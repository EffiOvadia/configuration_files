            "cursorColor": "#ffffff"
        }
    ],
    "showTabsInTitlebar": true,
    "showTerminalTitleInTitlebar": true,
    "snapToGridOnResize": true,
    "tabWidthMode": "titleLength",
    "theme": "system",
    "themes": [],
    "trimBlockSelection": true,
    "useAcrylicInTabRow": true,
    "windowingBehavior": "useNew",
    "wordDelimiters": "()\"'-:,.;<>~!@#$%^&*|+=[]{}?"
  }