{
  "$schema": "https://aka.ms/winget-settings.schema.json",
  "experimentalFeatures": { "dependencies": true, "directMSI": false, "zipInstall": false },
  "visual": { "progressBar": "accent" },
  "source": { "autoUpdateIntervalInMinutes": 5 },
  "installBehavior": { "disableInstallNotes": true },
  "installBehavior": { "preferences": { "scope": "user" } },
  "installBehavior": { "preferences": { "locale": [ "en-US", "he-IL" ] } },
  "installBehavior": { "preferences": {  "architectures": [ "x64" ] } },
  "telemetry": { "disable": true }
}
